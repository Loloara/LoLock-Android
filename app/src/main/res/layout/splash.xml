<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAAC42"
    >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/splash_circle"
    />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lolock"
        android:layout_above="@+id/lolock"
        android:background="@drawable/splash_lora"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/lolock"
        android:layout_above="@+id/lolock"
        android:layout_marginBottom="16.5dp"
        android:background="@drawable/splash_line"
        />
    <ImageView
        android:id="@+id/lolock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/splash_lolock"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/lolock"
        android:layout_below="@+id/lolock"
        android:background="@drawable/splash_lora"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lolock"
        android:layout_below="@+id/lolock"
        android:layout_marginTop="16.5dp"
        android:background="@drawable/splash_line"
        />
</RelativeLayout>